export MAKE := make

MAKEFLAGS := --no-print-directory

CC := gcc

CCFLAGS := -pthread
OBJCCFLAGS := $(CCFLAGS) -c

# recursive make and clean
.PHONY: build-subdirs
build-subdirs: $(DIRS)

.PHONY: $(DIRS)
$(DIRS):
	@$(MAKE) $(MAKEFLAGS) -C $@ all
	
.PHONY: clean-subdirs
clean-subdirs:
	@for dir in $(DIRS); do \
		$(MAKE) $(MAKEFLAGS) -C $$dir clean; \
	done

# dependencies
%.o: %.c*
	@echo -e "\t" CC $(OBJCCFLAGS) $< -o $@
	@$(CC) $(OBJCCFLAGS) $< -o $@
